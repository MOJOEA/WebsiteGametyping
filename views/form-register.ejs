<body>
    <div class="Register-container">
        <h2 class="text">Signin</h2>

        <form  action="/WebsiteLogin/process-register.php" id="RegisterForm" method="POST">

            <input type="text" id="username" name="username" placeholder="Username" class="input-box">

            <input type="email" id="email" name="email" placeholder="Email" class="input-box">

            <div class="password-box">
                <input type="password" id="password" name="password" placeholder="Password" class="input-box">
                <button type="button" class="toggle-btn" onclick="togglePassword()">üëÅ</button>
            </div>

            <input type="password" id="confirm-password" name="confirm-password" placeholder="Confirm Password" class="input-box">

            <h4 class="text" id="error-msg" ></h4>
            <button type="submit" class="Register-btn">confirm</button>
        </form>
        <script src="register.js"></script>

        <div class="box-link">
            <a href="/form-login" class="small-link">Login</a>
            <a href="#" class="small-link">Forgot password</a>
        </div>
    </div>
</body>
</html>